<div class="container">
  <h1><%= @task.title %></h1>
  <p class="border p-5 bg-secondary text-white"><%= @task.details %></p>

  <% if @task.completed %>
    <p>
      <i class="fa-solid fa-square-check"></i>
      This task is completed.
    </p>
  <% else %>
    <p>
      <i class="fa-regular fa-square"></i>
      This task is not completed yet.
    </p>
  <% end %>

  <hr>

  <%= link_to 'Edit this task', edit_task_path, class: 'btn btn-primary' %>
  <%= link_to 'Back to list', tasks_path, class: 'btn btn-primary' %>
</div>
